  <script>
    function calcularPeriodizacao() {
      const prioritarioBase = parseFloat(document.getElementById("prioritarioBase").value) || 0;
      const neutroBase = parseFloat(document.getElementById("neutroBase").value) || 0;
      const manutencaoBase = parseFloat(document.getElementById("manutencaoBase").value) || 0;

      const semanasRaw = parseInt(document.getElementById("semanasRaw").value, 10) || 0;
      const semanasGrind = parseInt(document.getElementById("semanasGrind").value, 10) || 0;
      const semanasSlaughter = parseInt(document.getElementById("semanasSlaughter").value, 10) || 0;
      const semanasAshes = parseInt(document.getElementById("semanasAshes").value, 10) || 0;

      const nomeProtocolo = document.getElementById("nomeProtocolo").value.trim();

      const totalSemanas = semanasRaw + semanasGrind + semanasSlaughter + semanasAshes;
      if (totalSemanas === 0) {
        alert("Defina pelo menos 1 semana em alguma fase.");
        return;
      }

      // Multiplicadores relativos ao volume-base (GRIND = 1.0)
      const fases = [
        {
          nome: "RAW",
          tag: "Base / MEV",
          semanas: semanasRaw,
          mult: 0.75
        },
        {
          nome: "GRIND",
          tag: "MAV / Base",
          semanas: semanasGrind,
          mult: 1.0
        },
        {
          nome: "SLAUGHTER",
          tag: "MRV / Choque",
          semanas: semanasSlaughter,
          mult: 1.2
        },
        {
          nome: "ASHES",
          tag: "MV / Deload",
          semanas: semanasAshes,
          mult: 0.5
        }
      ];

      const corpoTabela = document.getElementById("tabelaResultados");
      corpoTabela.innerHTML = "";

      fases.forEach(fase => {
        if (fase.semanas <= 0) return;

        const pri = Math.round(prioritarioBase * fase.mult);
        const neu = Math.round(neutroBase * fase.mult);
        const man = Math.round(manutencaoBase * fase.mult);

        const tr = document.createElement("tr");

        const tdFase = document.createElement("td");
        tdFase.innerHTML = `<strong>${fase.nome}</strong><br><span class="tag-small">${fase.tag}</span>`;
        tr.appendChild(tdFase);

        const tdSemanas = document.createElement("td");
        tdSemanas.textContent = fase.semanas;
        tr.appendChild(tdSemanas);

        const tdMult = document.createElement("td");
        tdMult.textContent = fase.mult.toFixed(2).replace(".", ",") + "×";
        tr.appendChild(tdMult);

        const tdPri = document.createElement("td");
        tdPri.textContent = pri + " séries";
        tr.appendChild(tdPri);

        const tdNeu = document.createElement("td");
        tdNeu.textContent = neu + " séries";
        tr.appendChild(tdNeu);

        const tdMan = document.createElement("td");
        tdMan.textContent = man + " séries";
        tr.appendChild(tdMan);

        corpoTabela.appendChild(tr);
      });

      const resumo = document.getElementById("resumoProtocolo");
      let textoResumo = `Total de ${totalSemanas} semana(s) distribuídas entre as fases.`;
      if (nomeProtocolo) {
        textoResumo = `<strong>${nomeProtocolo}</strong> • ` + textoResumo;
      }
      resumo.innerHTML = textoResumo;

      document.getElementById("results").style.display = "block";
    }

    function resetarValores() {
      document.getElementById("prioritarioBase").value = 18;
      document.getElementById("neutroBase").value = 14;
      document.getElementById("manutencaoBase").value = 8;
      document.getElementById("semanasRaw").value = 3;
      document.getElementById("semanasGrind").value = 3;
      document.getElementById("semanasSlaughter").value = 1;
      document.getElementById("semanasAshes").value = 1;
      document.getElementById("nomeProtocolo").value = "";
      document.getElementById("results").style.display = "none";
    }

    document.getElementById("calcularBtn").addEventListener("click", calcularPeriodizacao);
    document.getElementById("resetBtn").addEventListener("click", resetarValores);
  </script>
</body>
</html>
